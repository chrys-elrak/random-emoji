{
    "name": "Ext emoji",
    "manifest_version": 3,
    "version": "1.0",
    "action": {
        "default_popup": "src/popup/panel.html",
        "default_title": "Panel"
    },
    "background": {
        "service_worker": "src/scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["src/scripts/content.js"],
            "css": ["src/styles/panel.css"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab"
      ]
}